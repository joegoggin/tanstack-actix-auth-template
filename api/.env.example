# Environment
APP_ENV=development

# Docker
DOCKER_COMPOSE_AUTO_START_ENABLED=true

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/auth_template
AUTO_APPLY_MIGRATIONS_ENABLED=true

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here
JWT_ACCESS_TOKEN_EXPIRY_SECONDS=900
JWT_REFRESH_TOKEN_EXPIRY_SECONDS=604800

# Resend Email Service
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Auth Codes
AUTH_CODE_EXPIRY_SECONDS=600

# Cookie Configuration
# Optional. Leave unset for host-only cookies in local/Tailscale development.
# Set this in production when you need an explicit cookie domain.
# COOKIE_DOMAIN=example.com
COOKIE_SECURE=false

# Logging
LOG_LEVEL=debug
LOG_HTTP_BODY_ENABLED=false
LOG_HTTP_MAX_BODY_BYTES=16384
