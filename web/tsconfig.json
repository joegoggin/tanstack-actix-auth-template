{
    "include": [
        ".storybook/**/*.ts",
        ".storybook/**/*.tsx",
        "**/*.ts",
        "**/*.tsx",
        "eslint.config.js",
        "prettier.config.js",
        "vite.config.js"
    ],

    "compilerOptions": {
        "target": "ES2022",
        "jsx": "react-jsx",
        "module": "ESNext",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "types": ["vite/client"],
        "rootDirs": ["src", "types/scss/src"],

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,

        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        }
    }
}
